<Window x:Class="YP.CategoriesWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:YP" 
        mc:Ignorable="d" 
        Title="CategoriesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="CategoriesDataGrid" AutoGenerateColumns="False" ItemsSource ="{Binding a}" 
                  SelectedItem ="{Binding selectedItem}">

            <DataGrid.Columns>
                <DataGridTextColumn  Header="Номер" Binding="{Binding CategoryID}"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
